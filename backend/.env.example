# ==========================================
# Backend Environment Configuration
# ==========================================

NODE_ENV=development
PORT=5000

# MongoDB
MONGO_URI=mongodb://admin:secret@mongodb:27017/pict_cie?authSource=admin

# JWT Authentication
# Access token (short-lived) — 15 minutes recommended for production
JWT_SECRET=your_jwt_secret_key_change_in_production_2025_min_32_chars
JWT_EXPIRE=15m
# Refresh token (long-lived) — 7 days
JWT_REFRESH_SECRET=your_refresh_secret_key_different_from_access_min_32_chars
JWT_REFRESH_EXPIRE=7d

# CORS — Comma-separated origins (use specific domains in production, never *)
# Example: http://localhost:5173,https://cie.pict.edu
CORS_ORIGIN=http://localhost:5173

# AI Provider: "openai" or "gemini"
AI_PROVIDER=gemini
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o

# Gemini (get a free key at https://aistudio.google.com/apikey)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

# AI Reliability
AI_TIMEOUT_MS=30000
AI_MAX_RETRIES=2
AI_MAX_TOKENS=3000

# Rate Limiting
AI_RATE_LIMIT_WINDOW_MS=60000
AI_RATE_LIMIT_MAX=20

# Admin Seed (change in production!)
ADMIN_EMAIL=admin@pict.edu
ADMIN_PASSWORD=Admin@123

# Logging — debug, info, warn, error
LOG_LEVEL=debug
